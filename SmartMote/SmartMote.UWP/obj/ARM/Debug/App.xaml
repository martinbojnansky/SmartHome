<Application
    x:Class="SmartMote.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartMote.UWP"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <!--Colors & Brushes-->
            <Color x:Key="SystemAccentColor">#FF4081</Color>
            <Color x:Key="PrimaryColor">#3f51b5</Color>
            <Color x:Key="PrimaryDarkColor">#303f9f</Color>
            <Color x:Key="MediumGrayColor">#d2d2d2</Color>
        </ResourceDictionary>
    </Application.Resources>

</Application>

