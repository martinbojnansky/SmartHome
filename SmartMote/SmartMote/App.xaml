<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SmartMote.Controls"
             x:Class="SmartMote.App">
	<!--Resources-->
    <Application.Resources>
        <ResourceDictionary>
            
            <!--Colors-->
            <Color x:Key="AccentColor">#f62459</Color>
            <Color x:Key="LightGrayColor">#eeeeee</Color>

            <!--Base Values-->
            <Thickness x:Key="PagePadding">12</Thickness>
            <Thickness x:Key="WindowsTabbedPagePadding">-12,0</Thickness>

            <!--Base Styles-->
            <Style TargetType="controls:TextBox">
                <Setter Property="FontSize" Value="Medium"/>
            </Style>
            <Style TargetType="ActivityIndicator">
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>

            <!--Shared Styles-->
            <Style x:Key="HeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Medium"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
    <!--Properties-->
    <Application.Properties>
    </Application.Properties>
</Application>